@model List<Solutions.Models.Post>
@{
    ViewBag.Title = "ListPosts";
}

<div class="container">
    <div class="well">
        <h2>@Html.ActionLink("Create Post", "Create", "Post")</h2>
        <div class="row">

            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Language</th>
                        <th>Author</th>
                        <th>Verified</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.Id</td>
                            <td><a href="@Html.DisplayFor(modelItem => post.Link)">@Html.DisplayFor(modelItem => post.Title)</a></td>
                            <td>@post.LanguageId</td>
                            <td>@post.Author.FullName</td>
                            <td>@post.Verified</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
