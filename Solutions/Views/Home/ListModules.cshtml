@model List<Solutions.Models.Module>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h1 style="color: blue; text-align: center"><strong>>>> Welcome to TOP-GUN! <<<</strong></h1>
        <h2 style="color: blue; text-align: center"><strong>The only unofficial portal for Soft-Uni problem's solutions!</strong></h2>

        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th><h3><strong>#</strong></h3></th>
                        <th><h3><strong>Name</strong></h3></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var module in Model)
                    {
                        <tr>
                            <td>
                                <h3>
                                    <strong>
                                        @module.Priority
                                    </strong>
                                </h3>
                            </td>

                            <td>
                                <h3>
                                    <strong>

                                        @Html.ActionLink(string.Format($"{module.Name} "), "ListCourses", "Home", new { @moduleId = module.Id }, new { @style = "text-decoration:none;" })

                                    </strong>
                                </h3>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

