@model Solutions.Models.Course

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h1><strong>@Html.DisplayFor(model => model.Name)</strong></h1>

        @if (Model.Chapters.Count > 0)
        {
            <div class="row">
                <table class="table table-striped table-hover col-sm-12">
                    <thead>
                        <tr>
                            <th><h4><strong>Name</strong></h4></th>
                            <th><h4><strong>Solutions</strong></h4></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chapter in Model.Chapters)
                        {
                            <tr>
                                <td>
                                    <h4>
                                        @Html.ActionLink(string.Format($"{chapter.Title}"), "ListPosts", "Home", new { @chapterId = chapter.Id }, null)
                                    </h4>
                                </td>

                                <td><h4><strong>@chapter.Posts.Count</strong></h4></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
