@using Solutions.Enums
@model Solutions.Models.PostViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>


<div class="container">
    <div class="well">
        <h2>Delete Solution</h2>
        @using (Html.BeginForm("Delete", "Post", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Link, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Link, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @*@Html.ActionLink("Cancel", "Index", "Article", null, new { @class = "btn btn-default" })*@
                    @Html.ActionLink("Cancel", "List", "Post", null, new { @class = "btn btn-default" })




                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>

